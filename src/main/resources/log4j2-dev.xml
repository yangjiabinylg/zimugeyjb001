<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <Appenders>
   <!--   配置和logback差不多的   -->
        <!--   输出到控制台   -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="[%-5p] %d %c - %m%n" />
        </Console>

        <!--    输出到日志文件
         yyyy-MM-dd 是按照每天一个文件输出，
         yyyy-MM 是按照每月一个文件输出  一般是按照天来的
         yyyy-MM-dd-HH-mm   是按照每分钟划分
          -->
<!--        <RollingFile name="runtimeFile" fileName="./logs/boot-launch.log" filePattern="./logs/boot-launch-%d{yyyy-MM-dd-HH-mm}.log"-->
<!--                     append="true">-->
        <RollingFile name="runtimeFile" fileName="./logs/boot-launch.log" filePattern="./logs/boot-launch-%d{yyyy-MM-dd}.log"
                     append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS Z}\t%level\t%class\t%line\t%thread\t%msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <!-- 此行以下为自动清理日志的配置 -->
            <DefaultRolloverStrategy>
                <Delete basePath="./logs">
                    <!-- glob 项为需要自动清理日志的pattern -->
                    <IfFileName glob="*.log"/>
                    <!-- 30d 表示自动清理掉30天以前的日志文件
                         自动删除30天前的日志
                     -->
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
            <!-- 此行以上为自动清理日志的配置 -->
        </RollingFile>


        <!--
             复制上面的配置  修改为accessLog 用来记录用户操作日志  单独存放新文件中
             不讲操作日志  存放在总的日志文件中
               -->

        <RollingFile name="accessLog" fileName="./logs/boot-launch-accessLog.log" filePattern="./logs/boot-launch-accessLog-%d{yyyy-MM-dd}.log"
                     append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS Z}\t%level\t%class\t%line\t%thread\t%msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <!-- 此行以下为自动清理日志的配置 -->
            <DefaultRolloverStrategy>
                <Delete basePath="./logs">
                    <!-- glob 项为需要自动清理日志的pattern -->
                    <IfFileName glob="*.log"/>
                    <!-- 30d 表示自动清理掉30天以前的日志文件
                         自动删除30天前的日志
                     -->
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
            <!-- 此行以上为自动清理日志的配置 -->
        </RollingFile>


    </Appenders>

    <Loggers>
        <!--   配置用户操作的日志
               参数1：拦截器的路径
               参数2：配置的日志级别
               参数3：不将本日志存放root（记录到总的日志文件中）
            -->
        <logger name="com.unicom.zimugeyjb.config.accesslog.AccessLogInterceptor"
                level="info"
                additivity="false">
            <!--    引用上面定义的操作日志的方法        -->
            <AppenderRef ref="accessLog"/>
        </logger>



        <!--    日志级别    -->
        <root level="info">
            <!--    输出到控制台      -->
            <AppenderRef ref="CONSOLE" />
            <!--    输出到日志文件中    -->
            <AppenderRef ref="runtimeFile" />
        </root>
    </Loggers>

<!--    log4j2默认是异步存储到日志文件的  不需要配置   -->

</configuration>
